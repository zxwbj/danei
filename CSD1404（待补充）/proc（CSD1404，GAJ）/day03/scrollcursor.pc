#include <stdio.h>
exec sql include sqlca;
int main(){
    exec sql begin declare  section;
		    char userpasswd[30]="openlab/open123";
	      struct  {
				    int  id;
						char name[30];
						double salary;
				}emp;	
		exec sql end   declare  section;
		exec sql connect:userpasswd;
